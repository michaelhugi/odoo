<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_finance_tool_form" model="ir.ui.view">
        <field name="name">finance.tool.form</field>
        <field name="model">finance.tool</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_calculate_balance" string="Neu Berechnen" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <div class="oe_title"><h1><field name="name"/></h1></div>
                    <field name="currency_id" invisible="1"/>

                    <group string="LiquiditÃ¤t">
                        <field name="kpi_liq_1" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="kpi_liq_2" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                        <field name="kpi_liq_3" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                    </group>

                    <group>
                        <group string="Aktiva">
                            <group>
                                <field name="kpi_total_aktiva" widget="monetary" style="font-weight:bold; font-size:1.2em;" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <field name="aktiva_line_ids" nolabel="1" readonly="1" widget="section_and_note_one2many">
                                <tree limit="1000" create="0" delete="0" edit="0"
                                      decoration-info="is_highlight">

                                    <field name="display_type" invisible="1"/>
                                    <field name="sequence" invisible="1"/>
                                    <field name="is_highlight" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="original_currency_id" invisible="1"/>

                                    <button name="action_view_journal_items" type="object" icon="fa-list" title="Buchungen" attrs="{'invisible': [('display_type', '!=', False)]}"/>

                                    <field name="view_code" decoration-info="is_highlight"/>

                                    <field name="name" decoration-info="is_highlight"/>

                                    <field name="view_account_type" widget="badge" decoration-info="is_highlight"/>

                                    <field name="view_original_amount" widget="monetary" options="{'currency_field': 'original_currency_id'}" decoration-info="is_highlight"/>

                                    <field name="view_converted_amount" widget="monetary" options="{'currency_field': 'currency_id'}" string="In CHF" decoration-info="is_highlight"/>
                                </tree>
                            </field>
                        </group>

                        <group string="Passiva">
                            <group>
                                <field name="kpi_total_passiva" widget="monetary" style="font-weight:bold; font-size:1.2em;" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <field name="passiva_line_ids" nolabel="1" readonly="1" widget="section_and_note_one2many">
                                <tree limit="1000" create="0" delete="0" edit="0"
                                      decoration-info="is_highlight">

                                    <field name="display_type" invisible="1"/>
                                    <field name="sequence" invisible="1"/>
                                    <field name="is_highlight" invisible="1"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="original_currency_id" invisible="1"/>

                                    <button name="action_view_journal_items" type="object" icon="fa-list" title="Buchungen" attrs="{'invisible': [('display_type', '!=', False)]}"/>

                                    <field name="view_code" decoration-info="is_highlight"/>
                                    <field name="name" decoration-info="is_highlight"/>
                                    <field name="view_account_type" widget="badge" decoration-info="is_highlight"/>

                                    <field name="view_original_amount" widget="monetary" options="{'currency_field': 'original_currency_id'}" decoration-info="is_highlight"/>

                                    <field name="view_converted_amount" widget="monetary" options="{'currency_field': 'currency_id'}" string="In CHF" decoration-info="is_highlight"/>
                                </tree>
                            </field>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_finance_tool_tree" model="ir.ui.view">
        <field name="name">finance.tool.tree</field>
        <field name="model">finance.tool</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="create_date" string="Erstellt am"/>
                <field name="kpi_total_aktiva" widget="monetary"/>
                <field name="currency_id" invisible="1"/>
            </tree>
        </field>
    </record>

    <record id="action_finance_tool" model="ir.actions.act_window">
        <field name="name">Finanz Cockpit</field>
        <field name="res_model">finance.tool</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_finance_root" name="Finanz Tool" sequence="10"/>
    <menuitem id="menu_finance_dashboard" parent="menu_finance_root" name="Dashboard" action="action_finance_tool" sequence="10"/>
</odoo>